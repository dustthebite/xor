<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tvX1_text"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="X1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvX1_value"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tvX1_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvX2_text"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="X2"
        app:layout_constraintStart_toEndOf="@+id/tvX1_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvX2_value"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tvX2_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvXOR_text"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="XOR"
        app:layout_constraintStart_toEndOf="@+id/tvX2_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvXOR_value"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tvXOR_text"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>